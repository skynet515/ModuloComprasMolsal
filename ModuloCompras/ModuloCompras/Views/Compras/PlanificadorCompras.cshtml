
@{
    ViewBag.Title = "PlanificadorCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h3 class="page-header-title">
                            Planificador Compras
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    Planificador Compras
                </div>
                <div class="card-body">
                    <div class="form-body">
                        <form>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-3">
                                    Articulos desde:
                                    <input type="text" id="txtArtDesde" class="form-control" />
                                </div>
                                
                                <div class="col-md-3">
                                    Articulos Hasta:
                                    <input type="text" id="txtArHasta" class="form-control" />
                                </div>
                                
                            </div>

                            <div class="row gx-3 mt-2">
                                <div class="col-md-3">
                                    <span id="val-txtArtDesde" class="text-danger" hidden>El codigo desde es obligatorio.</span>
                                </div>
                                <div class="col-md-3">
                                    <span id="val-txtArHasta" class="text-danger" hidden>El codigo hasta es obligatorio.</span>
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-3">
                                    Sugerir cuando:
                                    <select class="form-control" id="slcCuando">
                                        <option disabled>--Seleccione--</option>
                                        <option>Punto minimo</option>
                                        <option>Punto de reorden</option>
                                        <option>Sin existencia</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-3">
                                    Periodo:
                                    <select class="form-control" id="slcPeriodo">
                                        <option disabled>--Seleccione--</option>
                                        <option>Trimestre</option>
                                        <option>Semanal</option>
                                        <option>Anual</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-3">
                                    Bodega:
                                    <select class="form-control" id="slcBodega">
                                        <option disabled>--Seleccione--</option>
                                        <option>Bodega Central</option>
                                        <option>Bodega Merliot</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-10">
                                    Proveedores:
                                    <div class="row mt-2">
                                        <div class="col-md-3">
                                            Desde:
                                            <input type="text" id="txtProveedorDesde" class="form-control" />
                                        </div>

                                        <div class="col-md-3">
                                            Hasta:
                                            <input type="text" id="txtProveedorHasta" class="form-control" />
                                        </div>

                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-3">
                                            <span id="val-txtProveedorDesde" class="text-danger" hidden>El codigo desde es obligatorio.</span>
                                        </div>
                                        <div class="col-md-3">
                                            <span id="val-txtProveedorHasta" class="text-danger" hidden>El codigo hasta es obligatorio.</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 text-right mt-4">
                                <button class="btn btn-primary" type="button" id="btnGuardarPlan">
                                    <i class="fas fa-check"></i>
                                    Guardar
                                </button>

                                <a class="btn btn-danger" href="@Url.Action("Index", "AvisosInfraccion")">
                                    <i class="fas fa-times"></i>
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


